<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/bkregister" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_register"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_nameRegister"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_register"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawableLeft="@drawable/icname"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="用户名"
                android:inputType="text"
                android:maxLength="23"
                android:minEms="16"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_password1"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_register"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawableLeft="@drawable/icpassword"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="16"
                android:minEms="16"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_password2"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_register"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:drawableLeft="@drawable/icpassword"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="密码确认"
                android:inputType="textPassword"
                android:maxLength="16"
                android:minEms="16"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/et_phoneRegister"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_register"
                android:digits="0123456789"
                android:drawableLeft="@drawable/icphone"
                android:drawablePadding="5dp"
                android:ems="10"
                android:hint="联系电话"
                android:inputType="phone"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/bt_register"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="#0072ff"
                android:onClick="clickButtonRegister"
                android:text="确认注册"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>